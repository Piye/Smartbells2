<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView1"
            android:text="Select an Exercise:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/exerciseSpinner"
            android:spinnerMode="dropdown"
            android:layout_margin="2dp"
            />
    </LinearLayout>


    <!-- SETS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sets"
            android:id="@+id/setsTextView"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editSetsText"
            android:gravity="center"
            android:numeric="integer"
            android:layout_weight="1"
            />
    </LinearLayout>

    <!-- Reps -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reps Per Set"
            android:id="@+id/repsTextView"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="5"
            android:id="@+id/editRepsText"
            android:gravity="center"
            android:layout_weight="1"
            android:numeric="integer" />

    </LinearLayout>

    <!-- BUTTONS -->

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_margin="2dp"
            android:id="@+id/addExerciseFromPrompt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_margin="2dp"
            android:id="@+id/cancelExerciseFromPrompt"/>
        </LinearLayout>


</LinearLayout>