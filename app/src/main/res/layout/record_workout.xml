<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- NAME -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="34dp"
            android:text="name"
            android:id="@+id/nameTextValue"
            android:layout_margin="2dp"/>

    </LinearLayout>


    <!-- SET GROUPS TITLE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Set Groups"
            android:id="@+id/setgroupsTextView"
            android:layout_margin="0dp"/>

    </LinearLayout>

    <!-- SET GROUPS -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <!-- EXERCISE -->
        <TextView
            android:id="@+id/exerciseTextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="exercisename"
            android:layout_margin="2dp"
            android:layout_weight=".5"/>

        <!-- RESISTANCE LEVEL -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Resistance Level:"
            android:id="@+id/resistanceTextView"
            android:layout_margin="1dp"
            android:layout_weight=".2"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editResistanceTextCustom"
            android:layout_weight=".1" />

        <!-- Reps Per Set -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reps Per Set:"
            android:id="@+id/repsTextView"
            android:layout_margin="1dp"
            android:layout_weight=".2"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editRepsTextCustom"
            android:layout_weight=".1" />

        <!-- Sets -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Number of Sets:"
            android:id="@+id/setsTextView"
            android:layout_margin="0dp"
            android:layout_weight=".2"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editSetsTextCustom"
            android:layout_weight=".1" />

    </LinearLayout>

    <!-- Save and Cancel BUTTONS -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="Save"
            android:layout_weight=".5"
            android:layout_margin="2dp"
            android:onClick="saveSession"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="Cancel"
            android:layout_weight=".5"
            android:layout_margin="2dp"
            android:onClick="cancelCreateCustomSession"/>

    </LinearLayout>

</LinearLayout>