<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NAME -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:background="@drawable/side_nav_bar"
        >

        <TextView
            android:id="@+id/workoutViewNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:text="workout_name"
            android:textSize="34dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="30dp"/>

    </LinearLayout>

    <!-- SET GROUPS TITLE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="routine_name"
            android:id="@+id/routineNameSetValue"
            android:layout_margin="2dp"/>

        <!-- SET GROUPS -->

        <!-- EXERCISE -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="exercise_name"
                android:id="@+id/workoutExerciseSetValue"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- RESISTANCE LEVEL -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Resistance Level:"
                android:id="@+id/workoutResistanceTextView"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="resistance_here"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/workoutResistanceSetValue"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- SETS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sets"
                android:id="@+id/workoutSetsTextView"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="number_of_sets"
                android:ems="10"
                android:id="@+id/workoutSetsSetValue"
                android:gravity="center"
                android:layout_weight="1"
                android:numeric="integer" />
        </LinearLayout>

        <!-- Reps -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Reps Per Set"
                android:id="@+id/workoutRepsTextView"
                android:layout_weight=".5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:inputType="number"
                android:text="number_of_reps"
                android:ems="5"
                android:id="@+id/workoutRepsSetValue"
                android:gravity="center"
                android:layout_weight=".5"
                android:numeric="integer" />
        </LinearLayout>

    </LinearLayout>

    <!-- Save and Cancel BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="Record"
            android:layout_weight=".5"
            android:layout_margin="2dp"
            android:id="@+id/recordWorkoutButton"
            android:onClick="recordWorkout"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:text="Back"
            android:layout_weight=".5"
            android:layout_margin="2dp"
            android:id="@+id/backButton"
            android:onClick="goBack"/>

    </LinearLayout>

</LinearLayout>